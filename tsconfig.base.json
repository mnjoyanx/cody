{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "noEmit": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@repo/ui/*": ["../ui/*"],
      "@packages/*": ["packages/*"],
      "@apps/*": ["../apps/*"],
    }
  }
}
